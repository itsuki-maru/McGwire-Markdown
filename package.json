{
  "name": "mcgwire",
  "version": "1.5.0",
  "description": "",
  "main": "./src/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "itsuki-maru.mcgwire-markdown",
    "productName": "McGwire",
    "mac": {
      "category": "your.app.category.type"
    },
    "win": {
      "target": "nsis",
      "icon": "./src/assets/icon.png",
      "fileAssociations": [
        {
          "ext": "md",
          "description": "Markdown files",
          "name": "McGwire",
          "role": "Editor"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "ace-builds": "^1.23.1",
    "electron": "^26.2.2",
    "electron-builder": "^24.6.4",
    "license-checker": "^25.0.1",
    "marked": "^5.1.1",
    "shepherd.js": "^11.1.1"
  },
  "dependencies": {
    "iconv-lite": "^0.6.3"
  }
}
